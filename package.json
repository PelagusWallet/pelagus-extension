{
  "name": "@pelagus/pelagus-extension",
  "private": true,
  "version": "1.0.4",
  "description": "Pelagus, the community owned and operated Web3 wallet for Quai Network.",
  "main": "index.js",
  "repository": "git@github.com:PelagusWallet/pelagus-extension.git",
  "author": "https://pelaguswallet.io",
  "license": "GPL-3.0",
  "jest": {
    "setupFiles": [
      "fake-indexeddb/auto",
      "jest-webextension-mock",
      "./setupJest.ts"
    ],
    "setupFilesAfterEnv": [
      "./setupJest.env.ts",
      "./ui/setupJest.env.ts"
    ],
    "testEnvironment": "jsdom"
  },
  "keywords": [
    "cryptocurrency",
    "wallet",
    "web3",
    "dapp"
  ],
  "scripts": {
    "start": "run-p -n -l \"dev {@}\" --",
    "clear": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "build": "webpack --mode=production",
    "dev": "patch-package && webpack --mode=development --watch",
    "lint": "run-p lint:*",
    "lint-fix": "run-p lint:*:fix",
    "lint:config": "prettier -c '**/*.@(json|yaml|toml|yml)'",
    "lint:config:fix": "prettier -w '**/*.@(json|yaml|toml|yml)'",
    "lint:docs": "prettier -c '**/*.md'",
    "lint:docs:fix": "prettier -w '**/*.md'",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "test": "yarn run test:unit && yarn run test:integration && yarn run test:ui",
    "test:integration": "echo \"> Running Integration Tests\" && jest \"integration.test.ts\" --forceExit --runInBand",
    "test:unit": "echo \"> Running Unit Tests\" && jest \"unit.test.ts\" --forceExit",
    "test:ui": "echo \"> Running UI Tests\" && jest \".test.tsx\" --forceExit",
    "test:e2e": "echo \"> Running e2e Tests\" && playwright test",
    "preversion": "(which jq >&1 && which yq >&1) || (echo 'You must install jq and yq; scripts/macos-setup.sh for macOS.' && exit 1)",
    "postversion": "git push --tags origin release-$npm_package_version",
    "postinstall": "patch-package && playwright install chromium"
  },
  "workspaces": [
    "ui",
    "background",
    "provider-bridge",
    "provider-bridge-shared",
    "window-provider"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@pelagus-provider/provider-bridge": "1.0.4",
    "@pelagus-provider/provider-bridge-shared": "1.0.4",
    "@pelagus-provider/window-provider": "1.0.4",
    "@pelagus/pelagus-background": "1.0.4",
    "@pelagus/pelagus-ui": "1.0.4",
    "buffer": "^6.0.3",
    "react": "^17.0.2",
    "sinon": "^14.0.1",
    "webext-options-sync": "^2.0.1",
    "webext-redux": "2.1.7",
    "webextension-polyfill": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/register": "^7.24.6",
    "@playwright/test": "^1.31",
    "@types/archiver": "^5.1.0",
    "@types/chrome": "^0.0.269",
    "@types/copy-webpack-plugin": "^8.0.0",
    "@types/dotenv-webpack": "^7.0.3",
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/jest": "^27.0.2",
    "@types/react-router-dom": "^5.3.1",
    "@types/remote-redux-devtools": "^0.5.5",
    "@types/terser-webpack-plugin": "^5.0.3",
    "@types/webpack-livereload-plugin": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "archiver": "^5.3.0",
    "babel-loader": "8.2.5",
    "copy-webpack-plugin": "^9.0.0",
    "dexie": "^3.0.3",
    "dotenv-defaults": "^2.0.2",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.3.2",
    "install": "^0.13.0",
    "jest": "^29.7.0",
    "npm": "^10.8.2",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "styled-jsx": "^5.1.6",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "webpack": "^5.58.1",
    "webpack-cli": "4.5.0",
    "webpack-livereload-plugin": "^3.0.1",
    "webpack-merge": "^5.8.0"
  }
}
